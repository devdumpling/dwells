<section id="new_website" class="expressions bg-primary">
    <div class="container">
	<div class="col-lg-12 text-center">
	    <% provide(:title, 'Add Website') %>
	    <h2>Add a new website to gallery</h2>
	</div>
    </div>
    
    <div class="row">
	<div class="col-md-4 col-md-offset-4">
	    <%= form_for(@website) do |f| %>
		<%= f.label :title %>
		<%= f.text_field :title, class: 'form-control' %>
		
		<%= f.label :subtitle %>
		<%= f.text_field :subtitle, class: 'form-control'%>
		
		<%= f.label :site_url %>
		<%= f.text_field :site_url, class: 'form-control' %>
		
		<%= f.label :logo_link %>
		<%= f.text_field :logo_link, class: 'form-control' %>

		<%= f.label :body %>
		<%= f.text_area :body, class: 'form-control' %>
		
		<%= f.submit "Add", class: "btn btn-primary" %>
	    <% end %>
	</div>
    </div>
</section>
