<section id="new_writing" class="expressions bg-primary">
    <div class="container">
	<div class="col-lg-12 text-center">
	    <% provide(:title, 'Add writing') %>
	    <h2>Add a new piece of writing to gallery</h2>
	</div>
    </div>

    <div class="row">
	<div class="col-md-4 col-md-offset-4">
	    <%= form_for(@writing) do |f| %>
		<%= f.label :title %>
		<%= f.text_field :title, class: 'form-control' %>
		
		<%= f.label :url %>
		<%= f.text_field :url, class: 'form-control' %>

		<%= f.submit "Add", class: "btn btn-primary"%>
	    <% end %>
	</div>
    </div>
</section>
